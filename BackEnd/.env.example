# Development Environment Variables
# Copy this file to .env and update values for your environment

# MongoDB Configuration
MONGODB_URL=mongodb://localhost:27017
DATABASE_NAME=studysync

# JWT Configuration  
JWT_SECRET_KEY=your-super-secret-key-change-this-in-production-min-32-chars
JWT_ALGORITHM=HS256

# Server Configuration
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=development

# CORS Configuration
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Security
BCRYPT_ROUNDS=12

# Production MongoDB (Atlas example)
# MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/studysync?retryWrites=true&w=majority

# Production Security (generate these securely)
# JWT_SECRET_KEY=your-production-secret-key-at-least-32-characters-long
# ENVIRONMENT=production
# CORS_ORIGINS=https://yourdomain.com